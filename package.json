{
  "name": "kadenz",
  "version": "1.0.0",
  "description": "Music Creation Helper App for Non-Creatives",
  "author": "Thomas Maier",
  "repository": "https://github.com/TinkeringAround/kadenz",
  "build": {
    "appId": "com.electron.kadenz",
    "productName": "Kadenz",
    "copyright": "Copyright Â© 2021 ${author}",
    "icon": "./public/assets/kadenz.icns",
    "artifactName": "${productName}.${ext}"
  },
  "main": "./public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "dictionary-de": "2.0.4",
    "dictionary-en": "3.1.0",
    "dictionary-fr": "^2.6.0",
    "electron-is-dev": "2.0.0",
    "node-wav": "0.0.2",
    "nspell": "2.1.5",
    "re-resizable": "6.9.1",
    "react": "17.0.2",
    "react-beautiful-dnd": "13.1.0",
    "react-dom": "17.0.2",
    "react-dropzone": "11.3.2",
    "react-router-dom": "5.2.0",
    "styled-components": "5.3.1",
    "tone": "14.8.26",
    "uuid": "8.3.2",
    "zustand": "3.5.10"
  },
  "devDependencies": {
    "@babel/core": "7.14.0",
    "@babel/preset-env": "7.14.1",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@testing-library/jest-dom": "5.12.0",
    "@testing-library/react": "11.2.6",
    "@types/jest": "26.0.23",
    "@types/node": "16.4.1",
    "@types/react": "17.0.4",
    "@types/react-beautiful-dnd": "13.1.1",
    "@types/react-dom": "17.0.3",
    "@types/react-dropzone": "5.1.0",
    "@types/react-router-dom": "5.1.7",
    "@types/styled-components": "5.1.9",
    "@types/uuid": "8.3.1",
    "babel-jest": "26.6.3",
    "concurrently": "6.0.2",
    "cpx": "1.5.0",
    "cross-env": "7.0.3",
    "electron": "13.1.7",
    "electron-builder": "22.11.7",
    "jest": "26.6.0",
    "jest-mock-extended": "1.0.18",
    "prettier": "2.3.2",
    "react-scripts": "4.0.3",
    "sass": "1.35.2",
    "typescript": "4.3.5",
    "wait-on": "6.0.0"
  },
  "scripts": {
    "dev": "concurrently \"cross-env BROWSER=none yarn react:start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "electron-builder --publish=never",
    "electron:package": "cpx src/store/action-types.js ./public/src && yarn react:build && yarn electron:build",
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "test:ci": "jest --collect-coverage --setupFilesAfterEnv='./src/setupTests.js'",
    "test:dev": "jest --watch --coverage --setupFilesAfterEnv='./src/setupTests.js'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "jest": {
    "clearMocks": true,
    "coveragePathIgnorePatterns": [
      "src/index.tsx",
      "features.ts",
      "theme.ts",
      "serviceWorker.ts",
      "mock/*",
      "store/index.ts",
      "actions.ts",
      "react-app-env.d.ts",
      "types.ts",
      "^(?!.*\\..js$).*\\.js$"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 80,
        "branches": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
