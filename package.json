{
  "name": "kadenz",
  "version": "1.0.0",
  "description": "<description>",
  "author": "<author>",
  "repository": "https://github.com/TinkeringAround/kadenz",
  "build": {
    "appId": "<com.electronapp>",
    "productName": "<productName>"
  },
  "main": "./public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "electron-is-dev": "2.0.0",
    "node-sass": "5.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0",
    "styled-components": "5.3.0",
    "zustand": "3.5.0"
  },
  "devDependencies": {
    "@babel/core": "7.14.0",
    "@babel/preset-env": "7.14.1",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@testing-library/jest-dom": "5.12.0",
    "@testing-library/react": "11.2.6",
    "@types/jest": "26.0.23",
    "@types/node": "15.0.1",
    "@types/react": "17.0.4",
    "@types/react-dom": "17.0.3",
    "@types/react-router-dom": "5.1.7",
    "@types/styled-components": "5.1.9",
    "babel-jest": "26.6.3",
    "concurrently": "6.0.2",
    "cpx": "1.5.0",
    "cross-env": "7.0.3",
    "electron": "12.0.6",
    "electron-builder": "22.10.5",
    "jest": "26.6.0",
    "prettier": "2.2.1",
    "react-scripts": "4.0.3",
    "typescript": "4.2.4",
    "wait-on": "5.3.0"
  },
  "scripts": {
    "dev": "concurrently \"cross-env BROWSER=none yarn react:start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "electron-builder --publish=never",
    "electron:package": "cpx src/store/action-types.js ./public/src && yarn react:build && yarn electron:build",
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "test": "jest --collect-coverage"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "src/index.tsx",
      "src/routes.ts",
      "src/theme.ts",
      "src/serviceWorker.ts",
      "mock/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
